#!/bin/bash
#
# Copyright 2014, 2015 Facundo Batista, NicolÃ¡s Demarchi

set -eu

if [ $# -ne 0 ]; then
    TARGET="$@"
else
    TARGET="fades tests"
fi

FADES='./bin/fades -r requirements.txt'

$FADES -x nosetests --with-xcoverage --cover-package=fades -v -s $TARGET
$FADES -x flake8 -- $TARGET --max-line-length=99 --select=E,W,F,C,N

# Check README.rst format.
OUTPUT=$(python3 setup.py --long-description | $FADES -x rst2html5 > /dev/null)
if [ -n "$OUTPUT" ]; then
    echo -e "README.rst format is incorrect\n"
    echo -e "Errors: \n$OUTPUT"
fi
